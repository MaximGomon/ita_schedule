
@using ITA.Schedule.Util
@model ITA.Schedule.Models.ShowStudentModel

@{
    ViewBag.Title = "Change status of " + Model.Name + " student";
    Layout = "~/Views/Admin/AdminBase.cshtml";
}

<h1>Change user status</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Group</th>
            <th>Subgroup</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Group</td>
            <td>@Model.Subgroup</td>
            <td>@Model.Status</td>
        </tr>
    </tbody>

</table>

@(@Model.Status == EntityStatus.Active ? Html.ActionLink("Deactivate", "DeactivateStudent", new { id = Model.Id }, new { @class = "btn btn-danger" }) : Html.ActionLink("Activate", "ActivateStudent", new { id = Model.Id }, new { @class = "btn btn-success" }))

@Html.ActionLink("Cancel", "ShowStudents", null, new { @class = "btn btn-default" })