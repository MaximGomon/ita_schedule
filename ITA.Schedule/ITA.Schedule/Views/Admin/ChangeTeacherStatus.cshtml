
@using ITA.Schedule.Util
@model ITA.Schedule.Models.TeacherModel
    
@{
    ViewBag.Title = "Delete " + Model.Name + " Teacher" ;
    Layout = "~/Views/Admin/AdminBase.cshtml";
}

<h1>Delete teacher from the database?</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Subjects</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Subjects</td>
    </tr>
    </tbody>

</table>

@(@Model.Status == EntityStatus.Active ? Html.ActionLink("Deactivate", "DeactivateTeacher", new {id = Model.Id}, new {@class = "btn btn-danger"}) : Html.ActionLink("Activate", "ActivateTeacher", new {id = Model.Id}, new {@class = "btn btn-success"}))

@Html.ActionLink("Cancel", "ShowTeachers", null, new { @class = "btn btn-default" })