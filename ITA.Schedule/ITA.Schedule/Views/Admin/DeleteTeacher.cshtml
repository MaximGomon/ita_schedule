
@model ITA.Schedule.Models.TeacherDeleteModel
    
@{
    ViewBag.Title = "Delete " + Model.Teacher.Name + " Teacher" ;
    Layout = "~/Views/Admin/AdminBase.cshtml";
}

<h1>Delete teacher from the database?</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Subjects</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.Teacher.Name</td>
        <td>
            @foreach (var subject in Model.Teacher.Subjects)
            {
                @subject.Name
                <br/>
            }
        </td>
    </tr>
    </tbody>

</table>

@Html.ActionLink("Deactivate", "DeleteTeacherFromDb", new { id = Model.Teacher.Id }, new { @class = "btn btn-danger" })
@Html.ActionLink("Cancel", "ShowTeachers", null, new { @class = "btn btn-default" })