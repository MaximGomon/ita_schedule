
@model ITA.Schedule.Entity.Entities.Teacher
    
@{
    ViewBag.Title = "Delete " + Model.Name + " Teacher" ;
    Layout = "~/Views/Admin/AdminBase.cshtml";
}

<h1>Видалити вчителя з бази даних?</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ім'я</th>
            <th>Предмети</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>
                @foreach (var subject in Model.Subjects)
                {
                    @subject.Name <br />
                }
            </td>
        </tr>
    </tbody>

</table>
