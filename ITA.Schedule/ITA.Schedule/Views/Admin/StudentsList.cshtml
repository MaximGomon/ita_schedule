@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<ITA.Schedule.Models.ShowStudentModel>

@{
    ViewBag.Title = "StudentsList";
    Layout = "~/Views/Admin/AdminBase.cshtml";
}
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>

<h2>Students</h2>
@Html.ActionLink("Add New Student", "AddStudent", null, new { @class = "btn btn-default" })

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Name)
        .Titled("Name")
        .Sortable(true)
        .Filterable(true);
    columns.Add(x => x.Group)
        .Titled("Group")
        .Sortable(true)
        .SortInitialDirection(GridSortDirection.Ascending)
        .Filterable(true);
    columns.Add(x => x.Subgroup)
        .Titled("Subgroup");
    columns.Add(x => x.Status)
        .Titled("Status")
        .Sortable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(x => @Html.ActionLink("Update", "UpdateStudent", new { id = x.Id }, new { @class = "btn btn-primary" }));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(x => @Html.ActionLink("Change Status", "ChangeStudentStatus", new { id = x.Id }, new { @class = "btn btn-danger" }));
}).WithPaging(10)