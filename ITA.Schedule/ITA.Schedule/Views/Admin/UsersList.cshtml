@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<ITA.Schedule.Models.ShowUserModel>

@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Admin/AdminBase.cshtml";
}
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>

<h2>Users</h2>
@Html.ActionLink("Add New User", "AddUser", null, new { @class = "btn btn-default" })

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Owner)
        .Titled("Owner")
        .Sortable(true)
        .Filterable(true);
    columns.Add(x => x.Login)
        .Titled("Login")
        .Sortable(true)
        .Filterable(true);
    columns.Add(x => x.Type)
        .Titled("Type")
        .Sortable(true)
        .Encoded(false)
        .Sanitized(false);
    columns.Add(x => x.Grants)
        .Titled("Grants")
        .Encoded(false)
        .Sanitized(false);
    columns.Add(x => x.Status)
        .Titled("Status")
        .Sortable(true);
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(x => @Html.ActionLink("Update", "UpdateUser", new { id = x.Id }, new { @class = "btn btn-primary" }));
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(x => @Html.ActionLink("Change Status", "ChangeUserStatus", new { id = x.Id }, new { @class = "btn btn-danger" }));
}).WithPaging(10)