@model ITA.Schedule.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authorization</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    
    <style>
        body {
            background-color: #d9d9d9;
        }

        .vertical-offset-100 {
            padding-top:100px;
        }
    </style>
</head>
<body>
        <div class="container-fluid vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please sign in</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {

                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Login, new {@class = "form-control", @placeholder = "Login"})
                                    @Html.ValidationMessageFor(u => u.Login)
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(u => u.Password, new {@class = "form-control", @placeholder = "Password"})
                                    @Html.ValidationMessageFor(u => u.Password)
                                </div>
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>



