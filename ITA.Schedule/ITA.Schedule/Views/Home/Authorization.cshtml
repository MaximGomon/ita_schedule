@model ITA.Schedule.Models.UserViewModel
@{AlertsMessege alertLogin = ViewBag.AlertLogin;}
@{AlertsMessege alertRegister = ViewBag.AlertRegister;}

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authorization</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <!-- download later -->
    @*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
    <!---->

    <style>
        body {
            background-color: #c7b39b;
            background-image: url(/Content/images/Hexagon-1.jpg);
            background-size: 100%;
        }

        .nav-tabs > li {
            width: 50%;
            text-align: center;
        }
    </style>
</head>
<body>

<div class="modal-dialog" role="document" style="margin-top: 10%">
    <div class="modal-content">

        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item active" style="">
                <a class="nav-link " data-toggle="tab" href="#login" role="tab">Login</a>
            </li>
            <li class="nav-item" style="">
                <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Register</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="login" role="tabpanel" style="">

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    //<form data-toggle="validator" role="form" id="login-form" action="/Home/Login" method="post">
                {
                    <div class="modal-body">

                        @using epamEntryTask.Controllers
                        <!-- Alert -->
                        <div id="AleartConteinerLogin">

                            @{
                                if (alertLogin != null)
                                {
                                    <div class="alert @alertLogin.ClassNames[(int) alertLogin.Status]" role="alert">
                                        <strong>@alertLogin.Tittle</strong> @alertLogin.Text
                                    </div>
                                }
                            }
                        </div>
                        <!--end Alert -->

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputEmailLogin" class="input-group-addon">Email</span>
                                <input class="form-control"
                                       name="emailLogin"
                                       id="inputEmailLogin"
                                       data-error="that email address is invalid"
                                       placeholder="YourEmail@gmail.com"
                                       type="email" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputPasswordLogin" class="input-group-addon">Password</span>
                                <input class="form-control"
                                       name="passwordLogin"
                                       id="inputPasswordLogin"
                                       pattern="^[_A-z0-9]{1,}$"
                                       data-minlength="6"
                                       maxlength="15"
                                       data-error="must enter minimum of 6 characters"
                                       placeholder="Enter your password"
                                       type="password" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="inline">
                            <button class="btn btn-primary" type="submit">Login</button>
                            <a href="#" style="margin-left: 15px">forgot your password?</a>
                        </div>

                    </div>

                }
                @*</form>*@

            </div>

            <div class="tab-pane" id="profile" role="tabpanel">

                <form data-toggle="validator" role="form" id="contact-form" action="/Home/Register" method="post">
                    <div class="modal-body">

                        <!-- Alert -->
                        <div id="AleartConteinerRegister">
                            @{if (alertRegister != null)
                              {
                                  <div class="alert @alertRegister.ClassNames[(int) alertRegister.Status]" role="alert">
                                      <strong>@alertRegister.Tittle</strong> @alertRegister.Text
                                  </div>
                              }
                            }
                        </div>
                        <!--end Alert -->

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputFirstNameRegister" class="input-group-addon">First name</span>
                                <input class="form-control"
                                       name="firstNameRegister"
                                       id="inputFirstNamRegistere"
                                       pattern="^[_A-z0-9]{1,}$"
                                       data-minlength="3"
                                       maxlength="15"
                                       data-error="Must enter minimum of 3 & without special characters"
                                       placeholder="enter your first name"
                                       type="text" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputLastNameRegister" class="input-group-addon">Last name</span>
                                <input class="form-control"
                                       name="lastNameRegister"
                                       id="inputLastNameRegister"
                                       pattern="^[_A-z0-9]{1,}$"
                                       data-minlength="3"
                                       maxlength="25"
                                       data-error="Must enter minimum of 3 & without special characters"
                                       placeholder="enter your last name"
                                       type="text" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputEmailRegister" class="input-group-addon">Email</span>
                                <input class="form-control"
                                       name="emailRegister"
                                       id="inputEmailRegister"
                                       data-error="that email address is invalid"
                                       placeholder="YourEmail@gmail.com"
                                       type="email" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span for="inputPasswordRegister" class="input-group-addon">Password</span>
                                <input class="form-control"
                                       name="passwordRegister"
                                       id="inputPasswordRegister"
                                       pattern="^[_A-z0-9]{1,}$"
                                       data-minlength="6"
                                       maxlength="15"
                                       data-error="must enter minimum of 6 characters"
                                       placeholder="Enter your password"
                                       type="password" required/>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>


                        <div class="form-group">
                            <input class="form-control-static" id="selectorRegister" name="selectorRegister" type="text" value="" hidden>
                            <div class="input-group" style="height: 34px;">

                                <span class="input-group-addon" style="background-color: #fff">
                                        <input type="radio" 
                                               onclick="SetRadioBtnInput('Student')"
                                               name="underwear"
                                               aria-label="Checkbox for following text input" 
                                               value="Student" data-error="must choose who you are, teacher or student." required>

                                        Student

                                    </span>
                                <span class="input-group-addon" style="background-color: #fff">
                                        <input type="radio" 
                                               onclick="SetRadioBtnInput('Teacher')"
                                               name="underwear"
                                               aria-label="Checkbox for following text input" 
                                               value="Teacher" required>

                                        Teacher

                                    </span>
                            </div>
                            <div class="help-block with-errors"></div>
                        </div>

                        <button class="btn btn-primary" type="submit">Register</button>

                    </div>
                </form>

            </div>

        </div>

    </div>
</div>
<script>
    function SetRadioBtnInput(value) {
        document.getElementById("selectorRegister").value = value;
    }
</script>
</body>
</html>
